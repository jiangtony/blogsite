<% include partials/header %>

<% blogs.forEach(function(blog) { %>
	<div>
		<h2><%= blog.title %></h2>
		<img src="<%= blog.image %>">
		<p><%= blog.created %></p>
		<p><%= blog.body.substring(0, 100) %>...</p>
		<a href="/blogs/<%=blog._id%>">Read More</a>
	</div>
<% }) %>

<% include partials/footer %>